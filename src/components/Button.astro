---
const { url, text, new_tab=false } = Astro.props;
---
<style>
  .custom-button {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1.2rem;
    background-color: transparent;
    color: black;
    text-decoration: none;
    font-weight: bold;
    border-radius: 6.4px;
    border: 2px solid black;
    text-align: center;
    transition: background-color 0.3s, color 0.3s;
  }

  .custom-button:hover {
    background-color: black;
    color: white;
  }
</style>

<a href={url} class="custom-button" target={new_tab ? "_blank" : "_self"}>{text}</a>