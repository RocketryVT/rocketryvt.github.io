---
import logo from '../assets/logo/rocketry_logo_no_text.png';
import { Picture } from "astro:assets";

const currentPath = Astro.url.pathname;
---
<style>
  .navmenu {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    align-items: center;
    padding: 1rem;
    background-color: black;
    color: white;
    font-family: 'Poppins', sans-serif;
    font-size: 16px;
    font-style: normal;
    line-height: 16px;
    letter-spacing: normal;
    text-transform: none;
    font-weight: lighter;
    font-stretch: condensed;
    text-size-adjust: 100%;
    unicode-bidi: isolate;
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    padding-bottom: 10px;
    z-index: 1000;
    align-self: flex-start;
  }

  .navmenu.dark {
    background-color: black;
    color: white;
  }

  .navmenu.light {
    background-color: white;
    color: black;
  }

  .navbar {
    display: flex;
    gap: 1rem;
    margin-right: 25px;
    color: white;
  }

  .navbar.light {
    /* light theme styles */
    background-color: white;
    color: black;
  }
  .navbar.dark {
    /* dark theme styles */
    background-color: white;
    color: black;
  }

  .navbar a {
    color: inherit;
    text-decoration: none;
    padding: 10px, 15px;
    margin: 0 20px;
    padding-bottom: 10px;
    line-height: 30px;
  }

  .navbar a.active {
    text-decoration: underline;
    text-underline-offset: 5px;
  }

  .navbar a:hover {
    text-decoration: underline;
  }

  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    min-width: 250px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1001;
    color: white;
    background-color: black;
  }

  .dropdown-content a {
    padding: 12px 16px;
    text-decoration: none;
    display: block;
  }

  .dropdown-content a:hover {
    text-decoration: underline;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .dropdown-content.dark {
    background-color: black;
    color: white;
  }

  .dropdown-content.light {
    background-color: white;
    color: black;
  }

  .logo {
    align-self: center;
    width: 100px;
    padding-bottom: 10px;
    margin-left: 25px;
  }
</style>

<div class="navmenu" >
  <div class="logo">
    <a href="/"><Picture class="logo" src={logo} alt="Rocketry at Virginia Tech" decoding={"async"} fetchpriority={"high"} loading={"eager"}/></a>
  </div>
  <div class="navbar">
    <a href="/" class={currentPath === '/' ? 'active' : ''}>Home</a>
    <a href="/about-us/" class={currentPath === '/about-us/' ? 'active' : ''} class="light">About Us</a>
    <div class="dropdown">
      <a href="/Projects/" class={currentPath.startsWith('/Projects') ? 'active' : ''}>Projects</a>
      <div class="dropdown-content">
        <a href="/2022-2023" class={currentPath === '/2022-2023' ? 'active' : ''}>2022 - 2023</a>
        <a href="/2021-2022" class={currentPath === '/2021-2022' ? 'active' : ''}>2021 - 2022</a>
        <a href="/2020-2021" class={currentPath === '/2020-2021' ? 'active' : ''}>2020 - 2021</a>
        <a href="/2019-2020" class={currentPath === '/2019-2020' ? 'active' : ''}>2019 - 2020</a>
        <a href="/2018-2019" class={currentPath === '/2018-2019' ? 'active' : ''}>2018 - 2019</a>
        <a href="/2017-2018" class={currentPath === '/2017-2018' ? 'active' : ''}>2017 - 2018</a>
        <a href="/2016-2017" class={currentPath === '/2016-2017' ? 'active' : ''}>2016 - 2017</a>
        <a href="/2015-2016" class={currentPath === '/2015-2016' ? 'active' : ''}>2015 - 2016</a>
      </div>
    </div>
    <div class="dropdown">
      <a href="/Team" class={currentPath.startsWith('/Team') ? 'active' : ''}>Team</a>
      <div class="dropdown-content">
        <a href="/Board" class={currentPath === '/Board' ? 'active' : ''}>Board of Directors</a>
        <a href="/Team/Aerostructures" class={currentPath === '/Team/Aerostructures' ? 'active' : ''}>Aerostructures</a>
        <a href="/Team/Avionics" class={currentPath === '/Team/Avionics' ? 'active' : ''}>Avionics</a>
        <a href="/Team/Subsystems" class={currentPath === '/Team/Subsystems' ? 'active' : ''}>Subsystems</a>
      </div>
    </div>
    <a href="/Sponsors/" class={currentPath === '/Sponsors/' ? 'active' : ''}>Sponsors</a>
    <a href="/Gallery/" class={currentPath === '/Gallery/' ? 'active' : ''}>Gallery</a>
    <a href="/Contact/" class={currentPath === '/Contact/' ? 'active' : ''}>Contact Us</a>
  </div>
</div>