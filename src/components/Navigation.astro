---
const currentPath = Astro.url.pathname;
const { headerStyles } = Astro.props;
import Logo from "./Logo.astro";
---
<style>
  .navmenu {
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: var(--header-background-color);
    color: var(--header-text-color);
    font-family: 'Poppins', sans-serif;
    transition: background-color 0.3s ease;
  }

  .top-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    width: 100%;
  }

  .logo-container {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .logo-container img {
    width: 107px;
    height: auto;
    margin: 0; /* remove vertical offset */
    display: block;
  }


  .navmenu.dark {
    background-color: var(--header-background-color);
    color: var(--header-text-color);
  }

  .navbar {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 1rem;
    padding: 10px 20px;
  }
  .navbar.dark {
    /* dark theme styles */
    background-color: var(--header-background-color);
    color: var(--header-text-color);
  }

  .navbar a {
    color: inherit;
    text-decoration: none;
    padding: 10px 15px;
    margin: 0 20px;
    line-height: 30px;
  }

  .navbar a.active {
    text-decoration: underline;
    text-underline-offset: 5px;
  }

  .navbar a:hover {
    text-decoration: underline;
  }

  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    min-width: 250px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1001;
    background-color: var(--header-background-color);
    color: var(--header-text-color);
  }

  .dropdown-content a {
    padding: 12px 16px;
    text-decoration: none;
    display: block;
  }

  .dropdown-content a:hover {
    text-decoration: underline;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .dropdown-content.dark {
    background-color: var(--header-background-color);
    color: var(--header-text-color);
  }

  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
  }

  .hamburger div {
    width: 25px;
    height: 3px;
    background-color: var(--header-text-color);
    margin: 4px 0;
  }
  .mobile-overlay {
    display: none;
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100vh;
    background: var(--header-background-color, black);
    color: var(--header-text-color, white);
    z-index: 2000;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: opacity 0.3s;
  overflow: auto;
  }

  .mobile-overlay.show {
    display: flex;
  }
  .mobile-overlay .close-btn {
    position: absolute;
    top: 2rem;
    right: 2rem;
    font-size: 2rem;
    cursor: pointer;
    color: inherit;
    background: none;
    border: none;
  }
  .mobile-overlay nav {
    display: flex;
    flex-direction: column;
  gap: 1rem;
  align-items: stretch;
  }
  .mobile-overlay a {
  font-size: 2rem;
    color: inherit;
    text-decoration: none;
  display: block;
  width: 100%;
  text-align: left;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid color-mix(in oklab, currentColor 10%, transparent);
  }
  .mobile-overlay a:last-child { border-bottom: none; }
  .mobile-dropdown-toggle { border-bottom: 1px solid color-mix(in oklab, currentColor 10%, transparent); }
  .mobile-dropdown-content a { border-bottom: none; }
  .mobile-overlay a:hover { text-decoration: underline; }
  .mobile-overlay a.active {
    text-decoration: underline;
  }
  .mobile-dropdown {
  width: 100%;
  text-align: center;
  margin-bottom: 0;
  position: relative;
}
.mobile-dropdown-toggle {
  background: none;
  border: none;
  color: inherit;
  font-size: 2rem;
  cursor: pointer;
  width: 100%;
  text-align: left;
  padding: 0.75rem 1rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.mobile-dropdown-toggle .chevron {
  margin-left: 0.75rem;
  width: 0.9em;
  height: 0.9em;
  flex-shrink: 0;
  transform: rotate(0deg);
  transition: transform 0.2s ease;
}
.mobile-dropdown-toggle .chevron path {
  stroke: currentColor;
  stroke-width: 2;
  fill: none;
  stroke-linecap: round;
  stroke-linejoin: round;
}
.mobile-dropdown.open .chevron {
  transform: rotate(90deg);
}
.mobile-dropdown-content {
  display: none;
  flex-direction: column;
  gap: 1rem;
  margin-top: 0.25rem;
  padding-left: 1rem;
}
.mobile-dropdown-content.show {
  display: flex;
}
.mobile-dropdown-content a {
  font-size: 1.4rem;
  padding: 0.5rem 1rem;
}

  /* Tighten link spacing before hamburger kicks in */
  @media (max-width: 1280px) {
    .navbar a {
      margin: 0 10px;
    }
  }

  /* Switch to hamburger at 1024px */
  @media (max-width: 1024px) {
    .navmenu {
      flex-direction: column;
      align-items: flex-start;
    }
    .navbar {
      display: none !important;
    }

    .navbar.show {
      display: flex;
    }

    .dropdown:hover .dropdown-content {
      display: none;
    }

    .dropdown.open .dropdown-content {
      display: block;
    }

    .dropdown-content {
      position: static;
      text-align: right;
    }

    .navbar a {
      margin: 10px 0;
      text-align: right;
    }
    .hamburger {
      display: flex;
    }
    .top-row {
      flex-direction: row;
      align-items: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hamburger = document.querySelector('.hamburger');
    const overlay = document.querySelector('.mobile-overlay');
    const closeBtn = document.querySelector('.mobile-overlay .close-btn');
    const overlayLinks = document.querySelectorAll('.mobile-overlay a');
    const mobileDropdownToggles = document.querySelectorAll('.mobile-dropdown-toggle');
    mobileDropdownToggles.forEach((toggle) => {
      const parent = toggle.closest('.mobile-dropdown');
      const content = parent ? parent.querySelector('.mobile-dropdown-content') : null;
      if (!content) return;
      toggle.addEventListener('click', () => {
        const isOpen = content.classList.toggle('show');
  parent && parent.classList.toggle('open', isOpen);
      });
    });

    if (hamburger && overlay) {
      hamburger.addEventListener('click', () => {
        overlay.classList.add('show');
        document.body.style.overflow = 'hidden';
      });
    }
    if (closeBtn && overlay) {
      closeBtn.addEventListener('click', () => {
        overlay.classList.remove('show');
        document.body.style.overflow = '';
      });
    }
    // Close overlay when a link is clicked
    overlayLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (overlay) {
          overlay.classList.remove('show');
          document.body.style.overflow = '';
        }
      });
    });
  });
</script>

