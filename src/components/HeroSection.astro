---
import { Picture, Image } from 'astro:assets'
const { title, description, image, image_description='', link, button_text, flip } = Astro.props;
import Button from "./Button.astro";
---

<style>
  .section {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 5rem 4rem;
    background-color: var(--background-color);
    color: var(--text-color);
    font-family: 'Poppins', sans-serif;
  }

  .section:nth-of-type(even, odd) {
    background-color: #f1f5f9;
  }

  .section-text {
    flex: 1;
    padding-right: 3rem;
    padding-left: 3rem;
    text-align: left;
  }

  .section-title {
    font-family: 'Roboto', sans-serif;
    font-size: 2.4rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.25rem;
    letter-spacing: -0.01em;
  }

  .section-description {
    font-family: 'Poppins', sans-serif;
    font-size: 1.1rem;
    font-weight: 400;
    line-height: 1.75;
    margin-bottom: 2rem;
    max-width: 560px;
    color: #444;
  }

  .section-image {
    flex: 1;
    max-width: 50%;
    padding-right: 2rem;
  }

  .section-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    display: block;
    box-shadow: 0 4px 24px rgba(0,0,0,0.10);
  }

  .flipped {
    flex-direction: row-reverse;
  }

  .flipped .section-text {
    padding-right: 3rem;
    padding-left: 0;
  }

  @media (max-width: 1024px) {
    .section {
      flex-direction: column;
      padding: 2.5rem 1.5rem;
    }

    .section.flipped {
      flex-direction: column;
    }

    .section-text {
      padding: 0 0 1.5rem;
      text-align: center;
    }

    .flipped .section-text {
      padding: 0 0 1.5rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .section-description {
      font-size: 1rem;
      max-width: 100%;
      color: inherit;
    }

    .section-image {
      max-width: 100%;
      width: 100%;
    }
  }
</style>

<div class={`section ${flip ? 'flipped' : ''}`}>
  <div class="section-text">
    <h2 class="section-title">{title}</h2>
    <p class="section-description">{description}</p>
    <Button url={link} text={button_text} />
  </div>
  <div class="section-image">
    <Image src={image} alt={image_description} />
  </div>
</div>