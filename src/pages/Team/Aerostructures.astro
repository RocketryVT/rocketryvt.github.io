---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Image from "astro/components/Image.astro";

import CannonWith2025Rocket from "../../assets/images/Aero/Cannon.jpg";
import fins from "../../assets/images/Aero/Fins.jpg";
import MeandRocket from "../../assets/images/Aero/MeandRocket.jpg";
import rocket3 from "../../assets/images/Aero/Rocket3.png";
import solidBoosterContingency from "../../assets/images/Aero/SolidBoosterContingency.jpeg";
import ThrustStructurePic from "../../assets/images/Aero/ThrustStructurePic.jpg";
import Tube from "../../assets/images/Aero/Tube.jpg";
import carbonFiber from "../../assets/images/Aero/carbon-fiber-bending.gif";
---

<style>
  .masonry {
    column-count: 2;
    column-gap: 1rem;
  }
  .masonry-item {
    break-inside: avoid;
    margin-bottom: 1rem;
  }
@media (max-width: 840px) {
  .masonry {
    column-count: 1;
  }
  .container,
  section.container {
    padding-left: 0.5rem !important;
    padding-right: 0.5rem !important;
  }
  .text-lg {
    padding-left: 0 !important;
    padding-right: 0 !important;
  }
  .py-8 {
    padding-top: 1.5rem !important;
    padding-bottom: 1.5rem !important;
  }
  .px-32 {
    padding-left: 0 !important;
    padding-right: 0 !important;
  }
  h1.text-6xl {
    font-size: 2.2rem;
    line-height: 1.1;
    word-break: break-word;
  }
}
</style>

<BaseLayout>
  <section class="container mx-auto px-4 md:px-32 py-8 text-center">
    <h1 class="text-6xl font-bold mb-8">Aerostructures</h1>
    <div class="flex flex-col md:flex-row items-start mb-8">
      <div class="md:w-4/12 p-4">
        <Image src={CannonWith2025Rocket} alt="Cannon Biscoe" class="w-full h-auto mb-4" />
        <p class="text-lg text-left">
          <span class="font-extrabold">Team Lead:</span> Cannon Biscoe<br
          />Junior in Aerospace Engineering
        </p>
      </div>
      <div class="md:w-4/5 p-4">
        <p class="text-lg text-left">
          The Aerostructures subteam is responsible for manufacturing all of the external components of the team's rocket. 
          Some of these components include the upper and lower airframe, boat tail, and fins. 
          We focus mainly on composite materials, developing carbon fiber composites by hand using a wet layup process. 
          In addition, we conduct physical material testing and Finite Element Analysis to confirm our 
          materials are preforming as expected and can withstand the loads experienced during flight.
        </p>
      </div>
    </div>
    <div class="masonry">
      <div class="masonry-item">
        <Image
          src={Tube}
          alt="Carbon Fiber Body Tube Built In-House"
          class="w-1/2 h-auto"
        />
        <p class="mt-2 text-left">Carbon Fiber Body Tube Built In-House</p>
      </div>
      <!-- <div class="masonry-item">
        <Image src={rocket3} alt="Rocket 3" class="w-full h-auto" />
        <p class="mt-2 text-left">Rocket 3</p>
      </div>
      <div class="masonry-item">
        <Image
          src={solidBoosterContingency}
          alt="Solid Booster Contingency"
          class="w-full h-auto"
        />
        <p class="mt-2 text-left">Solid Booster Contingency</p>
      </div> -->
      <div class="masonry-item">
        <Image
          src={ThrustStructurePic}
          alt="Original 2023-2024 Thrust Structure Full Assembly"
          class="w-1/2 h-auto"
        />
        <p class="mt-2 text-left">Original 2023-2024 Thrust Structure Full Assembly</p>
      </div>
      <!-- <div class="masonry-item">
        <Image
          src={carbonFiber}
          alt="Carbon Fiber Bending"
          class="w-full h-auto"
        />
        <p class="mt-2 text-left">Carbon Fiber Bending</p>
      </div> -->
      <div class="masonry-item">
        <Image src={fins} alt="Set of Carbon Fiber Fins After Post-Processing" class="w-full h-auto" />
        <p class="mt-2 text-left">Set of Carbon Fiber Fins After Post-Processing</p>
      </div>
      <div class="masonry-item">
        <Image src={CannonWith2025Rocket} alt="Canon and the 2024-2025 Rocket" class="w-full h-auto" />
        <p class="mt-2 text-left">Canon and the 2024-2025 Rocket</p>
      </div>
    </div>
  </section>
</BaseLayout>
