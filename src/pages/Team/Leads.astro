---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getImage, Image } from 'astro:assets';

import Daniel from '../../assets/images/Board/Daniel.jpeg';
import Vanessa from '../../assets/images/Board/Vanessa.jpeg';
import Brady from '../../assets/images/Board/Brady.jpeg';
import Cannon from '../../assets/images/Board/Cannon.jpeg';
import Cian from '../../assets/images/Board/Cian.jpeg';

const [danielOpt, vanessaOpt, bradyOpt, cannonOpt, cianOpt] = await Promise.all([
  getImage({ src: Daniel }),
  getImage({ src: Vanessa }),
  getImage({ src: Brady }),
  getImage({ src: Cannon }),
  getImage({ src: Cian }),
]);
---

<style>
    .board-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 2.5rem 1.25rem;
    }

    .board-container h1 {
      font-size: 2.5rem;
      font-weight: 700;
      font-family: 'Roboto', sans-serif;
      margin-bottom: 2rem;
      color: var(--brand-color, rgb(134, 31, 65));
    }
  
    .board {
      display: grid;
      grid-template-columns: repeat(5, 1fr); /* Ensure there are always 5 columns */
      gap: 20px;
      width: 100%;
      max-width: 1600px; /* Optional: Set a max-width to limit the width of the grid */
    }
  
    .board-member {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .board-member .img-wrap {
      width: 100%;
      overflow: hidden;
      border-radius: 6px;
    }

    .board-member img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 6px;
      display: block;
    }

    .board-member h2 {
      margin-top: 0.85rem;
      font-size: 1.15rem;
      font-weight: 600;
    }

    .board-member p {
      margin-top: 0.25rem;
      font-size: 0.9rem;
      font-weight: 400;
      color: #666;
    }

    @media (max-width: 1024px) {
        .board {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 640px) {
        .board {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 400px) {
        .board {
            grid-template-columns: 1fr;
        }
    }
  </style>

<BaseLayout pageTitle="Team Leads | Rocketry at Virginia Tech" preloadImages={[danielOpt.src, vanessaOpt.src, bradyOpt.src, cannonOpt.src, cianOpt.src]}>
    <div class="board-container">
      <h1>Team Leads</h1>
      <div class="board">
        <div class="board-member">
          <div class="img-wrap">
            <Image src={Daniel} alt="Daniel Young" loading="eager" fetchpriority="high"/>
          </div>
          <h2>Daniel Young</h2>
          <p>Project Manager</p>
        </div>

        <a href="/Team/Aerostructures" class="board-member">
          <div class="img-wrap">
            <Image src={Cannon} alt="Cannon Biscoe" loading="eager" fetchpriority="high" class="transition-transform duration-300 hover:scale-110"/>
          </div>
          <h2>Cannon Biscoe</h2>
          <p>Aerostructures Lead</p>
        </a>

        <a href="/Team/Avionics" class="board-member">
          <div class="img-wrap">
            <Image src={Cian} alt="Cian Capacci" loading="eager" fetchpriority="high" class="transition-transform duration-300 hover:scale-110"/>
          </div>
          <h2>Cian Capacci</h2>
          <p>Avionics Lead</p>
        </a>

        <a href="/Team/Subsystems" class="board-member">
          <div class="img-wrap">
            <Image src={Brady} alt="Brady Rehkop" loading="eager" fetchpriority="high" class="transition-transform duration-300 hover:scale-110"/>
          </div>
          <h2>Brady Rehkop</h2>
          <p>Subsystems Lead</p>
        </a>

        <div class="board-member">
          <div class="img-wrap">
            <Image src={Vanessa} alt="Vanessa Bushell" loading="eager" fetchpriority="high"/>
          </div>
          <h2>Vanessa Bushell</h2>
          <p>Treasurer</p>
        </div>
      </div>
    </div>
  </BaseLayout>