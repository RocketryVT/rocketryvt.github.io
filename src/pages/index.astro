---
import BaseLayout from '../layouts/BaseLayout.astro';
import Instagram from '../components/Instagram.astro';
import HeroSection from '../components/HeroSection.astro';

import experience from '../assets/images/experience.jpg';
import SAC2018 from '../assets/images/SAC2018.jpg';
import community from '../assets/images/DSC00049.jpg';
import promo_video from '../assets/videos/Spaceport_America_Cup_2018.mp4';
---
<BaseLayout headerColor="dark">
	<style>
    .background-video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
    }

    .content-wrapper {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      color: white;
      text-align: center;
      background-color: rgba(0, 0, 0, 0.5);
      position: relative;
      overflow: hidden;
      margin-top: -80px;
    }

    .main-title {
      text-size-adjust: 100%;
      font-family: 'Roboto', sans-serif;
      font-size: 64px;
      font-style: normal;
      font-weight: 700;
      letter-spacing: normal;
      line-height: 56.7016px;
      text-transform: none;
      white-space: pre-wrap;
    }

    .subtitle {
      text-size-adjust: 100%;
      font-family: 'Roboto', sans-serif;
      font-size: 22.0048px;
      font-style: normal;
      font-weight: 500;
      letter-spacing: normal;
      line-height: 30.0674px;
      text-transform: none;
      white-space: pre-wrap;
    }

  .section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    background-color: #f4f4f4;
    color: black;
    font-family: 'Poppins', sans-serif;
    padding-left: 5rem;
    padding-right: 5rem;
  }

  .section-text {
    flex: 1;
    padding-right: 2rem;
  }

  .section-title {
    font-family: 'Roboto';
    font-size: 44.8px;
    font-style: normal;
    font-weight: 700;
    line-height: 58.2px;
    text-size-adjust: 100%;
    margin-bottom: 2rem;
  }

  .section-description {
    font-family: 'Poppins';
    font-size: 16px;
    font-style: normal;
    font-weight: 300;
    letter-spacing: normal;
    line-height: 28.8px;
    text-size-adjust: 100%;
    margin-bottom: 1rem;
    max-width: 400px;
  }

  .section-image {
    flex: 1;
    max-width: 50%;
  }

  .section-image img {
    width: 100%;
    height: auto;
  }

  .learn-more {
    display: inline-block;
    padding: 0.7rem 1.169rem;
    background-color: transparent;
    color: black;
    text-decoration: none;
    font-weight: bold;
    border-radius: 6.4px;
    border: 2px solid black;
    text-align: center;
    transition: background-color 0.3s, color 0.3s;
  }

  .learn-more:hover {
    background-color: black;
    color: white;
  }
    
</style>
<div class="content-wrapper">
    <video class="background-video" autoplay="true" loop="true" muted="true">
      <source src={promo_video} type="video/mp4">
      Your browser does not support the video tag.
    </video>
    <h1 class="main-title">ROCKETRY AT VIRGINIA TECH</h1>
    <h4 class="subtitle">Pushing the limits of high-powered rocketry.</h4>
</div>

<HeroSection 
  title="HANDS-ON ENGINEERING EXPERIENCE" 
  description="Giving Virginia Tech students the aerospace and engineering opportunities that are only possible in a lab." 
  image={experience}
  image_description="A Group shot of the Rocketry at Virginia Tech team holding the teams rocket"
  link="/Team"
  flip={false} 
/>

<HeroSection 
  title="FROM BLACKSBURG TO NEW MEXICO" 
  description="Rocketry at Virginia Tech competes in the Spaceport America Cup competition where we fly rockets to a target altitude and compete with teams from all around the world."
  image={SAC2018}
  image_description="Several Members of the Rocketry at Virginia Tech team standing in front of the teams rocket at the Spaceport America Cup loading onto the launch rail"
  link="/Projects"
  flip={true}
/>

<HeroSection 
  title="GIVING BACK TO THE COMMUNITY" 
  description="Working with the university and local organizations to educate children and the community about high-powered rocketry and encourage interest in STEAM." 
  image={community}
  image_description="A group of children and Rocketry at Virginia Tech members looking and touching parts of the rocket at a booth"
  link="/Outreach"
  flip={false}
/>

<Instagram />

</BaseLayout>
 