---
import BaseLayout from '../layouts/BaseLayout.astro';
import Instagram from '../components/Instagram.astro';
import HeroSection from '../components/HeroSection.astro';

import experience from '../assets/images/Ohio_Launch_To_Pad.jpg';
import TeamPhoto from '../assets/images/Carrying_Roadkill_To_Launch.jpg';
import community from '../assets/images/DSC00049.jpg';
---
<BaseLayout headerColor="dark">
	<style>
    .application-banner {
      background-color: rgb(134, 31, 65);
      color: white;
      padding: 12px 0;
      text-align: center;
      font-family: 'Poppins', sans-serif;
      font-weight: 600;
      font-size: 16px;
      position: relative;
      z-index: 10;
    }

    .banner-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .apply-now-link {
      color: white;
      text-decoration: underline;
      font-weight: bold;
      margin-left: 8px;
      transition: opacity 0.3s ease;
    }

    .apply-now-link:hover {
      opacity: 0.8;
    }

    @media (max-width: 1024px) {
      .application-banner {
        font-size: 14px;
        padding: 10px 0;
      }
    }

    .background-video {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 100vw;
      height: 56.25vw; /* 16:9 aspect ratio */
      min-height: 100vh;
      min-width: 177.77vh; /* 16:9 aspect ratio */
      transform: translate(-50%, -50%);
      z-index: -1;
      border: none;
      pointer-events: none;
    }

    .content-wrapper {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      color: white;
      text-align: center;
      background-color: rgba(0, 0, 0, 0.5);
      position: relative;
      overflow: hidden;
      margin-top: -80px;
    }

    .main-title {
      text-size-adjust: 100%;
      font-family: 'Roboto', sans-serif;
      font-size: 64px;
      font-style: normal;
      font-weight: 700;
      letter-spacing: normal;
      line-height: 56.7016px;
      text-transform: none;
      white-space: pre-wrap;
    }

    .subtitle {
      text-size-adjust: 100%;
      font-family: 'Roboto', sans-serif;
      font-size: 22.0048px;
      font-style: normal;
      font-weight: 500;
      letter-spacing: normal;
      line-height: 30.0674px;
      text-transform: none;
      white-space: pre-wrap;
    }

    @media (max-width: 1024px) {
      .main-title {
        font-size: 36px;
        line-height: 42px;
      }

      .subtitle {
        font-size: 16px;
        line-height: 22px;
      }

      .content-wrapper {
        padding: 0 1rem;
      }
    }

    @media (max-width: 480px) {
      .main-title {
        font-size: 28px;
        line-height: 34px;
      }
    }

</style>

