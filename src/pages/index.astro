<div class="content-wrapper">
    <iframe 
      class="background-video" 
      src="https://www.youtube.com/embed/Ac1cOiMtIZA?si=FJMVE0_nUbTXTO0f&controls=0&autoplay=1&mute=1&loop=1&playlist=Ac1cOiMtIZA" 
      title="YouTube video player" 
      frameborder="0" 
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
      referrerpolicy="strict-origin-when-cross-origin" 
      allowfullscreen>
    </iframe>
    <h1 class="main-title">ROCKETRY AT VIRGINIA TECH</h1>
    <h4 class="subtitle">Pushing the limits of high-powered rocketry.</h4>
</div>

<HeroSection 
  title="HANDS-ON ENGINEERING EXPERIENCE" 
  description="Our team members gain invaluable hands-on experience by designing, building, and launching high-powered rockets." 
  image={experience}
  image_description="A Group shot of the Rocketry at Virginia Tech team holding the teams rocket"
  link="/Team/Board"
  flip={true} 
/>

<HeroSection 
  title="FROM BLACKSBURG TO TEXAS" 
  description="Rocketry at Virginia Tech competes in the International Rocket Engineering Competition (IREC), the largest intercollegiate rocketry competition in the world."
  image={TeamPhoto}
  image_description="Several Members of the Rocketry at Virginia Tech team standing in front of the teams rocket at the Spaceport America Cup loading onto the launch rail"
  link="/Projects"
  flip={true}
/>

<HeroSection 
  title="GIVING BACK TO THE COMMUNITY" 
  description="Working with the university and local organizations to educate the community about high-powered rocketry and encourage interest in STEM." 
  image={community}
  image_description="A group of children and Rocketry at Virginia Tech members looking and touching parts of the rocket at a booth"
  link="/Outreach"
  flip={true}
/>

<Instagram />

</BaseLayout>
 