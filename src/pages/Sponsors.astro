---
import BaseLayout from "../layouts/BaseLayout.astro";
import Image from "astro/components/Image.astro";

import Button from "../components/Button.astro";

import ErinwithFlag from "../assets/images/Sponsors/ErinwithFlag.jpg";

// Import sponsor logos
import AOE_LogoWhite from "../assets/images/Sponsors/KevinT.CroftonDepartmentofAerospaceandOceanEngineering_horizontal_RGB copy.png";
import SEC_LogoWhite from "../assets/images/Sponsors/SEC_LogoWhite.png";
import VSGC_LogoWhite from "../assets/images/Sponsors/VSGC_LogoWhite.png";
import Northrop from "../assets/images/Sponsors/northrop-white.svg";
import LockheedWhite from "../assets/images/Sponsors/LockheedWhite.png";
import Boeing from "../assets/images/Sponsors/boeing-white.png";
import L3Harris from "../assets/images/Sponsors/L3Harris-White.png";
---

<style>
  html {
    scroll-behavior: smooth;
  }
  .bg-maroon {
    background-color: rgb(134, 31, 65);
  }
  .text-maroon {
    color: rgb(134, 31, 65);
  }
  .indented-list {
    padding-left: 1.5rem;
    line-height: 2;
  }
  .line-height {
    line-height: 1.3;
  }
  .hero-section {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    padding: 4rem 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  @media (min-width: 768px) {
    .hero-section {
      flex-direction: row;
      align-items: flex-start;
    }
  }
  .hero-text {
    flex: 5;
  }
  .hero-image {
    flex: 7;
  }
  .hero-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.12);
  }
  .cta-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 2rem;
  }
  .thank-you-block {
    background-color: #f8f4f5;
    text-align: center;
    padding: 3rem 2rem 1rem;
    margin-top: 3rem;
  }
  .thank-you-block p {
    max-width: 680px;
    margin: 0 auto;
    line-height: 1.75;
    color: #555;
  }
  .sponsors-band {
    background-color: rgb(134, 31, 65);
    color: white;
    padding: 4rem 2rem;
    text-align: center;
  }
  .sponsors-band h2 {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    margin-bottom: 3rem;
  }
  .logos-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem 4rem;
    max-width: 960px;
    margin: 0 auto;
    place-items: center;
  }
  @media (min-width: 640px) {
    .logos-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  @media (min-width: 900px) {
    .logos-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  .logo-item {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80px;
    width: 100%;
    text-decoration: none;
    transition: transform 0.2s ease;
    cursor: pointer;
  }
  .logo-item:hover {
    transform: scale(1.15);
  }
  .logo-item img {
    max-height: 80px;
    max-width: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    filter: brightness(0) invert(1);
    opacity: 0.85;
    transition: opacity 0.2s ease;
  }
  .logo-item:hover img {
    opacity: 1;
  }
  @media (max-width: 768px) {
    .hero-section {
      padding: 2rem 1.5rem;
    }
    .cta-buttons {
      flex-direction: column;
    }
  }
</style>

<BaseLayout pageTitle="Sponsors | Rocketry at Virginia Tech">
  <div class="hero-section">
    <div class="hero-text">
      <h2 class="text-5xl font-bold mb-4 text-maroon line-height">
        Interested in supporting Rocketry at Virginia Tech?
      </h2>
      <h3 class="text-xl font-bold mb-2">What Our Sponsors Gain</h3>
      <ul class="list-disc list-inside mb-4 indented-list">
        <li>Networking opportunities with a diverse group of skilled engineering students</li>
        <li>Site visits to our lab where we make 95% of our components in-house</li>
        <li>Exposure at the world's largest intercollegiate rocket engineering competition</li>
      </ul>
      <p>
        We are grateful to have the support of multiple sponsors who have provided mentorship,
        financial donations, and material donations. Your contributions allow us to share our
        passion for high-power rocketry with students, the university, and the aerospace industry.
      </p>
      <div class="cta-buttons">
        <Button url="/Contact" text="Sponsor Us" />
        <Button url="#sponsors-section" text="See Our Sponsors" />
      </div>
    </div>
    <div class="hero-image">
      <Image
        src={ErinwithFlag}
        alt="Rocketry at Virginia Tech team member at Spaceport America Cup"
        loading="eager"
      />
    </div>
  </div>

  <div class="thank-you-block">
    <h4 class="text-maroon" style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1rem;">A Word to Our Sponsors</h4>
    <p>
      Rocketry at Virginia Tech is very fortunate to have multiple businesses, organizations,
      and sponsors willing to support our mission. We would like to extend a sincere thank you
      to our sponsors and anyone who has helped us in the past. Our team would not be possible
      without your generosity and support.
    </p>
  </div>

  <div id="sponsors-section" class="sponsors-band" style="scroll-margin-top: 80px;">
    <h2>THANK YOU TO OUR 2024â€“25 SPONSORS</h2>
    <div class="logos-grid">
      <a class="logo-item" href="https://aoe.vt.edu" target="_blank" rel="noopener noreferrer">
        <Image src={AOE_LogoWhite} alt="Kevin T. Crofton Department of Aerospace and Ocean Engineering" style="transform: scale(1.2);"/>
      </a>
      <a class="logo-item" href="https://www.sec.vt.edu" target="_blank" rel="noopener noreferrer">
        <Image src={SEC_LogoWhite} alt="SEC" />
      </a>
      <a class="logo-item" href="https://www.vsgc.odu.edu" target="_blank" rel="noopener noreferrer">
        <Image src={VSGC_LogoWhite} alt="Virginia Space Grant Consortium" style="transform: scale(1.5);"/>
      </a>
      <a class="logo-item" href="https://www.northropgrumman.com" target="_blank" rel="noopener noreferrer">
        <Image src={Northrop} alt="Northrop Grumman" />
      </a>
      <a class="logo-item" href="https://www.lockheedmartin.com" target="_blank" rel="noopener noreferrer">
        <Image src={LockheedWhite} alt="Lockheed Martin" />
      </a>
      <a class="logo-item" href="https://www.boeing.com" target="_blank" rel="noopener noreferrer">
        <Image src={Boeing} alt="Boeing" />
      </a>
      <a class="logo-item" href="https://www.l3harris.com" target="_blank" rel="noopener noreferrer">
        <Image src={L3Harris} alt="L3Harris" style="transform: scale(2.0);" />
      </a>
    </div>
  </div>
</BaseLayout>
